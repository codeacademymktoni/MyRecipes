@model MyRecipes.ViewModels.RecipeOverviewDataModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Home";

}

<div class="row" style="margin-bottom:20px">
    <form asp-controller="Recipes" asp-action="Overview" class="form-inline">
        <div class="form-group">
            <input name="Title" value="" id="title" class="form-control" placeholder="Search" />
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>

@if (@Model.Recipes.Count == 0)
{
    <p>No results found</p>
}

<div class="row">
    <div class="col-md-9">
        <div class="row">
            @foreach (var recipe in @Model.Recipes)
            {
                <div class="col-lg-4">
                    <div class="card">
                        <img src="@recipe.ImageUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">@recipe.Title</h5>
                            <p class="card-text">@recipe.Description</p>
                            <p class="card-text">Created @recipe.DaysCreated days ago</p>
                            <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-primary"> See more </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-3">
        <partial name="SidebarPartial" for="SidebarData" />
    </div>
</div>

