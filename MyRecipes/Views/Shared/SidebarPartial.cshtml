@model MyRecipes.Services.DtoModels.SidebarData
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div style="width:100%; background-color:#343a40; color:white; padding:20px">
    <h2>Top recipes</h2>
    @foreach (var recipe in Model.TopRecipes)
    {
        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id" style="color:white; text-decoration:none">
            <div style="padding:5px; background-color:#a8a8a8;  margin:5px">
                <p>Title: @recipe.Title  </p>
                <p>Date created: @recipe.DateCreated.ToString("yyyy-MM-dd")</p>
                <p>Views: @recipe.Views</p>
            </div>
        </a>
    }

    <h2>Recent recipes</h2>
    @foreach (var recipe in Model.RecentRecipes)
    {
        <a asp-controller="Recipes" asp-action="Details" asp-route-id="@recipe.Id" style="color:white; text-decoration:none">
            <div style="padding:5px; background-color:#a8a8a8;  margin:5px">
                <p>Title: @recipe.Title  </p>
                <p>Date created: @recipe.DateCreated.ToString("yyyy-MM-dd")</p>
                <p>Views: @recipe.Views</p>
            </div>
        </a>
    }
</div>